<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkgimg"
    android:orientation="vertical" >
    
     <TextView 
         android:id="@+id/text_up"
         android:layout_width="match_parent"
      	 android:layout_height="8dp"
         />
     
	<LinearLayout
	  android:layout_width="match_parent"
      android:layout_height="wrap_content"
      
      android:orientation="vertical" >
      
     <include
         layout="@layout/weather_today" />
     </LinearLayout>
     
     <TextView 
         android:id="@+id/text_up1"
         android:layout_width="match_parent"
      	 android:layout_height="6dp"
         />
     
	<ImageView 
	    android:id="@+id/img_row_line"
      	android:layout_width="match_parent" 
      	android:layout_height="wrap_content"
      	android:layout_gravity="center"
      	android:src="@drawable/rowline"
	    />
	
	<TextView 
         android:id="@+id/text_low"
         android:layout_width="match_parent"
      	 android:layout_height="3dp"
         />
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include layout="@layout/weather_otherdat" />
       

    </LinearLayout>

</LinearLayout>